{
  lib,
  config,
  ...
}: {
  options.zaphkiel.services.openssh.enable = lib.mkEnableOption "openssh service";
  config = lib.mkIf (config.zaphkiel.services.openssh.enable && config.zaphkiel.services.enable) {
    services.openssh = {
      enable = true;
      openFirewall = true;
      startWhenNeeded = true;

      settings = {
        PasswordAuthentication = false;
        PermitRootLogin = "no";
        AllowUsers = config.zaphkiel.data.users;
      };

      knownHosts = {
        seraphine = {
          extraHostNames = ["seraphine.fell-rigel.ts.net" "100.112.116.17"];
          publicKey = "ssh-rsa ";
        };
        aphrodite = {
          extraHostNames = ["aphrodite.fell-rigel.ts.net" "100.121.86.4"];
          publicKey = "ssh-rsa ";
        };
      };
    };
  };
}
